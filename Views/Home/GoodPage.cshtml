@using ASP_SHOP.Models
@model Good

@{
    ViewBag.Title = "GoodPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="good">
    <div class="good__info">
        <div class="good__media">
            <div class="good__images">
                @foreach (ImageForGood item in Model.Images)
                {
                    <div class="good__image-block">
                        <div class="good__image" style="background-image: url('@item.Path')"></div>
                    </div>
                }

            </div>
            <div class="good__preview-block">
                <div class=" good__preview" style="background-image:url('@Model.Images.First(i=>i.IsLogo).Path')"></div>
            </div>
            
        </div>
        <div class="good__description">
            <div class="good__buy">
                <p class="good__price">@Model.Price$</p>
                @if (Session["Cart"] != null)
                {
                    if ((Session["Cart"] as Cart).CartItems.Select(c => c.Good.Id).Contains(Model.Id))
                    {
                        <div class="good__buy-active">
                            <p>This good added to cart</p>
                            @Html.ActionLink("Delete from cart", "DeleteFromCart", "Cart", new { id = Model.Id, backURL = Request.Url.PathAndQuery }, new { @class = "btn btn-light good__button" })
                        </div>
                    }
                    else
                    {
                        @Html.ActionLink("Add to cart", "AddToCart", "Cart", new { id = Model.Id, backURL = Request.Url.PathAndQuery }, new { @class = "btn btn-dark good__button" })
                    }
                }
                else
                {
                    @Html.ActionLink("Add to cart", "AddToCart", "Cart", new { id = Model.Id, backURL = Request.Url.PathAndQuery }, new { @class = "btn btn-dark good__button" })
                }


            </div>
            
            <div class="good__title">
                @Model.Title
            </div>
            <div class="good__category">
                @Model.Category.CategoryName
            </div>
        </div>
    </div>

    <div class="good__comments">

    </div>
</div>

@section Scripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
            $(".good__image").on("mouseover", function (e) {
                $(".good__preview").css("backgroundImage", `${$(this).css("backgroundImage")}`);
            });
        })
    </script>
}